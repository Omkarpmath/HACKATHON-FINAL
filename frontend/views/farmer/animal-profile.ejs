<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= animal.tagId %> - JeevBandhu</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/dashboard" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-700 hover:text-emerald-600 transition">Dashboard</a>
                    <span class="text-gray-600">Hi, <%= user.name %></span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 transition">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-6">
            <a href="/dashboard" class="text-emerald-600 hover:text-emerald-700">‚Üê Back to Dashboard</a>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
            <!-- Left Column: Animal Info -->
            <div class="md:col-span-1 space-y-6">
                <div class="card">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">
                        <%= animal.tagId %>
                    </h2>

                    <!-- Status Badge -->
                    <div class="mb-4">
                        <span class="px-4 py-2 rounded-full text-sm font-semibold
                            <% if (animal.status === 'HEALTHY') { %>bg-green-200 text-green-800<% } %>
                            <% if (animal.status === 'WITHDRAWAL_LOCK') { %>bg-red-200 text-red-800<% } %>
                            <% if (animal.status === 'QUARANTINE') { %>bg-yellow-200 text-yellow-800<% } %>">
                            <%= animal.status %>
                        </span>
                    </div>

                    <!-- Info Grid -->
                    <div class="space-y-3 text-sm">
                        <div>
                            <span class="text-gray-600">Species:</span>
                            <span class="font-semibold ml-2"><%= animal.species %></span>
                        </div>

                        <% if (animal.breed) { %>
                        <div>
                            <span class="text-gray-600">Breed:</span>
                            <span class="font-semibold ml-2"><%= animal.breed %></span>
                        </div>
                        <% } %>

                        <% if (animal.geneticLineage) { %>
                        <div>
                            <span class="text-gray-600">Lineage:</span>
                            <span class="font-semibold ml-2"><%= animal.geneticLineage %></span>
                        </div>
                        <% } %>
                    </div>

                    <!-- Health Score -->
                    <div class="mt-6">
                        <div class="flex justify-between text-sm mb-2">
                            <span class="text-gray-600">Health Score</span>
                            <span class="font-bold text-lg"><%= animal.healthScore %>/100</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-3">
                            <div class="h-3 rounded-full
                                <% if (animal.healthScore >= 70) { %>bg-health-good<% } else if (animal.healthScore >= 40) { %>bg-health-warning<% } else { %>bg-health-danger<% } %>"
                                style="width: <%= animal.healthScore %>%">
                            </div>
                        </div>
                    </div>

                    <!-- Withdrawal Warning -->
                    <% if (animal.status === 'WITHDRAWAL_LOCK' && daysRemaining > 0) { %>
                    <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
                        <strong>üîí Withdrawal Period</strong>
                        <p class="text-sm mt-1">
                            <%= daysRemaining %> day(s) remaining until safe for production
                        </p>
                    </div>
                    <% } %>

                    <!-- Actions -->
                    <div class="mt-6 space-y-2">
                        <a href="/animals/<%= animal._id %>/add-medicine" class="block text-center btn-primary">
                            Add Medical Log
                        </a>
                        <button onclick="deleteAnimal()" class="w-full btn-danger">
                            Delete Animal
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column: Medical History -->
            <div class="md:col-span-2">
                <div class="card">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Medical History</h3>

                    <% if (medicalLogs.length === 0) { %>
                    <div class="text-center py-8 text-gray-500">
                        <p>No medical records yet</p>
                    </div>
                    <% } else { %>
                    <div class="space-y-4">
                        <% medicalLogs.forEach(log => { %>
                        <div class="border border-gray-200 rounded-lg p-4 hover:border-emerald-300 transition">
                            <div class="flex justify-between items-start mb-2">
                                <h4 class="font-semibold text-gray-900"><%= log.medicineName %></h4>
                                <span class="text-sm text-gray-500">
                                    <%= new Date(log.administeredAt).toLocaleDateString() %>
                                </span>
                            </div>

                            <div class="grid grid-cols-2 gap-4 text-sm">
                                <% if (log.dosage) { %>
                                <div>
                                    <span class="text-gray-600">Dosage:</span>
                                    <span class="ml-2"><%= log.dosage %></span>
                                </div>
                                <% } %>

                                <div>
                                    <span class="text-gray-600">Withdrawal:</span>
                                    <span class="ml-2 font-semibold"><%= log.withdrawalDays %> days</span>
                                </div>
                            </div>

                            <% if (log.notes) { %>
                            <p class="text-sm text-gray-600 mt-2"><%= log.notes %></p>
                            <% } %>
                        </div>
                        <% }) %>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <script>
        async function deleteAnimal() {
            if (!confirm('Are you sure you want to delete this animal? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch('/animals/<%= animal._id %>/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/dashboard';
                } else {
                    alert('Failed to delete animal: ' + data.error);
                }
            } catch (error) {
                alert('Error deleting animal');
            }
        }
    </script>
</body>

</html>