<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Products - JeevBandhu</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/dashboard" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-700 hover:text-emerald-600 transition">Dashboard</a>
                    <a href="/list-product" class="text-gray-700 hover:text-emerald-600 transition">List Product</a>
                    <a href="/marketplace" class="text-gray-700 hover:text-emerald-600 transition">Marketplace</a>
                    <span class="text-gray-600">Hi, <%= user.name %></span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 transition">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">My Products</h1>
            <p class="text-gray-600 mt-2">Manage your marketplace listings</p>
        </div>

        <% if (products.length===0) { %>
            <div class="text-center py-16">
                <div class="text-6xl mb-4">üì¶</div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">No products listed yet</h2>
                <p class="text-gray-600 mb-6">Start selling by listing your first product</p>
                <a href="/list-product" class="btn-primary">List Product</a>
            </div>
            <% } else { %>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% products.forEach(product=> { %>
                        <div class="card">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-xl font-bold text-gray-900">
                                    <%= product.productType %>
                                </h3>
                                <span class="badge-verified">‚úÖ Verified</span>
                            </div>

                            <div class="space-y-2 text-sm mb-4">
                                <% // Handle both old and new product schemas const
                                    hasQuantitySystem=product.pricePerUnit !==undefined && product.totalQuantity
                                    !==undefined; const availableQty=hasQuantitySystem ? (product.totalQuantity -
                                    (product.quantitySold || 0)) : null; %>

                                    <% if (hasQuantitySystem) { %>
                                        <!-- New quantity-based system -->
                                        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-3 mb-2">
                                            <div class="flex justify-between items-center">
                                                <span class="text-gray-700">Price per <%= product.unit %>:</span>
                                                <span class="font-bold text-emerald-600 text-lg">‚Çπ<%=
                                                        product.pricePerUnit.toFixed(2) %></span>
                                            </div>
                                            <div class="flex justify-between items-center mt-2">
                                                <span class="text-gray-700">Stock Status:</span>
                                                <span
                                                    class="font-semibold <%= availableQty < product.totalQuantity * 0.2 ? 'text-red-600' : 'text-gray-900' %>">
                                                    <%= availableQty.toFixed(1) %> / <%= product.totalQuantity %>
                                                            <%= product.unit %>
                                                </span>
                                            </div>
                                            <% if (product.quantitySold> 0) { %>
                                                <div class="text-xs text-gray-600 mt-1">
                                                    Sold: <%= product.quantitySold %>
                                                        <%= product.unit %>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } else { %>
                                            <!-- Old fixed-price system (backwards compatibility) -->
                                            <div class="text-gray-600">
                                                <span>Quantity:</span>
                                                <span class="font-semibold ml-2">
                                                    <%= product.quantity %>
                                                        <%= product.unit %>
                                                </span>
                                            </div>
                                            <div class="text-gray-600">
                                                <span>Price:</span>
                                                <span class="font-semibold ml-2 text-lg">‚Çπ<%= product.price.toFixed(2)
                                                        %></span>
                                            </div>
                                            <% } %>

                                                <% if (product.animal) { %>
                                                    <div class="text-gray-600">
                                                        <span>Source:</span>
                                                        <span class="font-semibold ml-2">
                                                            <%= product.animal.tagId %>
                                                        </span>
                                                    </div>
                                                    <% } %>

                                                        <% if (product.description) { %>
                                                            <p class="text-gray-600 mt-2">
                                                                <%= product.description %>
                                                            </p>
                                                            <% } %>
                            </div>

                            <div class="flex justify-between items-center">
                                <div class="text-xs text-gray-500">
                                    Listed: <%= new Date(product.createdAt).toLocaleDateString() %>
                                </div>
                                <button onclick="deleteProduct('<%= product._id %>', '<%= product.productType %>')"
                                    class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition text-sm font-medium">
                                    üóëÔ∏è Delete
                                </button>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </main>

    <script>
        async function deleteProduct(productId, productType) {
            if (!confirm(`Are you sure you want to delete this ${productType} listing?\n\nThis action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/products/${productId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert('‚úÖ Product deleted successfully!');
                    window.location.reload();
                } else {
                    alert('‚ùå ' + result.error);
                }
            } catch (error) {
                alert('‚ùå Failed to delete product. Please try again.');
            }
        }
    </script>
</body>

</html>